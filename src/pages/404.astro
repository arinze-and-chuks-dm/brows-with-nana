---
import leaf from '@assets/icons/leaf-up.svg'
import Header from '@components/Header.astro'
import LinkButton from '@components/LinkButton.astro'
import config from '@config/config.json'
import { main } from '@config/menu.json'
import Base from '@layouts/Base.astro'
const {
  site: { logo_text} = {}
} = config;
---

<Base title='404' noindex description='404 page'>
    <Header />
  <main>

    <div class="section">
      <div class="flex flex-shrink-0 justify-center">
        <a href={main.Home} aria-label="home" class="inline-flex">
          <span class="sr-only">{logo_text}</span>
          <img class="w-auto h-32" src={leaf.src} alt="">
        </a>
      </div>
      <div class="py-5">
        <div class="text-center space-y-2">
          <p class="font-semibold">404</p>
          <h1 class="font-bold sm:text-5xl">Page not found.</h1>
          <p class="text-bas">Sorry, we couldn’t find the page you’re looking for.</p>
          <div class="mt-6">

        <LinkButton text='Home' href={main.Home} />
         </div>
        </div>
      </div>
    </div>
  </main>
</Base>
