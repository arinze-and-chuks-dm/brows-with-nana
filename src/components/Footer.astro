import email from '@assets/icons/email.svg'
import facebook from '@assets/icons/facebook.svg'
import instagram from '@assets/icons/instagram.svg'
import locationIcon from '@assets/icons/location-pin-dark.svg'
import phone from '@assets/icons/phone.svg'
import tiktok from '@assets/icons/tiktok.svg'
import twitter from '@assets/icons/twitter.svg'
import youtube from '@assets/icons/youtube.svg'
import logo from '@assets/images/brows-with-nana-logo.png'
import config from '@config/config.json'
import menu from '@config/menu.json'
import { markdownify } from '@lib/utils/textConverter'
import GetStartWithUs from '@sections/GetStartWithUs.astro'
const {
  params: { copyright } = {},
  contactInfo,
  site: { logo_text} = {}
} = config;

const { main } = menu;
const data =  [
    {text: contactInfo.address, icon: locationIcon},
    {text: contactInfo.phone, icon: email},
    {text: contactInfo.email, icon: phone},
]
---

<GetStartWithUs />
<footer aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl pb-8 pt-16">
    <div class="xl:grid xl:grid-cols-5 xl:gap-8">
      <div class="">
        <img
        src={logo.src}
          alt={logo_text}
        />
      </div>
      <div class="col-span-1 space-y-5">
        <h3 class="text-sm font-semibold leading-6">Links</h3>
        <ul role="list" class="mt-6 space-y-4">
          {
            main.map((item) => (
              <li>
                <a href="#" class="text-sm leading-6">
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="col-span-1 space-y-5">
        <h3 class="text-sm font-semibold leading-6">Contact Us</h3>
        <div>

          <ul class="space-y-5">
            {data.map(item => (
                <li class="flex space-x-2">
                    <img class="self-start"   src={item.icon.src} alt="location icon" />
                    <span set:html={markdownify(item.text)} />
                </li>

            ))}
        </ul>
        </div>
      </div>
      <div class="col-span-1 space-y-5">
        <h3 class="text-sm font-semibold leading-6">About Us</h3>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic velit
              corporis vitae rerum doloribus aliquid ex id tenetur consequuntur,
              ratione, perferendis fugiat quos, iusto natus voluptate inventore
              est sapiente eaque?
            </p>
      </div>

      <div class="col-span-1 space-y-5">
  <h3 class="text-sm font-semibold leading-6">Follow Us</h3>
<div class="grid grid-cols-3 gap-y-10">
  <a href="#" class="text-sm leading-6">
    <img src={youtube.src} alt="youtube" />
  </a>
  <a href="#" class="text-sm leading-6">
    <img src={facebook.src} alt="facebook" />
  </a>
  <a href="#" class="text-sm leading-6">
    <img src={twitter.src} alt="twitter" />
  </a>
  <a href="#" class="text-sm leading-6">
    <img src={instagram.src} alt="instagram" />
  </a>
  <a href="#" class="text-sm leading-6">
    <img src={tiktok.src} alt="tiktok" />
  </a>
</div>

      </div>

    </div>
    <div
      class="mt-16 text-center border-t border-black/10 pt-8 sm:mt-20 lg:mt-24"
    >
      <p class="text-xs leading-5">
        {copyright}
      </p>
    </div>
  </div>
</footer>
