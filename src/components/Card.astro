---
export interface Props {
  title: string
  body: string
}

const { title, body } = Astro.props
---

<div
  class="flex flex-col space-y-5 rounded-lg h-72 px-10 justify-center items-center"
>
  <h3 class="text-2xl">{title}</h3>
  <p class="text-gray-500">{body}</p>
  <a href="#" class="group text-black transition">
    Read More
    <span
      class="block max-w-0 group-hover:max-w-full transition-all h-0.5 bg-black"
    ></span>
  </a>
</div>
