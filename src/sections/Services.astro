---
const services = [
  {
    title: 'Microblading',
    description: 'Strokes only | Only by request',
    icon: '/images/serv-microblading.svg',
  },

  {
    title: 'Microshading',
    description: 'Shading Only',
    icon: '/images/serv-nanas-signature.svg',
  },
  {
    title: 'Feather Brows',
    description: 'Front Strokes & Shading',
    icon: '/images/serv-microshading.svg',
  },
  {
    title: "Nana's Signature",
    description: 'Something special',
    icon: '/images/serv-nanas-signature.svg',
  },
] as const;
---

<section class="section-colored">
  <div class="mx-auto max-w-xl lg:max-w-none space-y-24">
    <h3 class="text-[#423139] text-center text-6xl">Our Services</h3>
    <div
      class="mx-auto grid max-w-sm grid-cols-1 gap-x-8 gap-y-10 sm:max-w-none lg:grid-cols-4"
    >
      {
        services.map((service) => (
          <div class="text-center sm:flex sm:text-left lg:block lg:text-center">
            <div class="sm:flex-shrink-0">
              <div class="flex justify-center">
                <img src={service.icon} alt="" />
              </div>
            </div>
            <div class="mt-3 sm:ml-6 sm:mt-0 lg:ml-0 lg:mt-6">
              <h4 class=" text-2xl font-medium text-[#423139]">
                {service.title}
              </h4>
              <p class="mt-2 text-lg text-[#8F7880]">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
