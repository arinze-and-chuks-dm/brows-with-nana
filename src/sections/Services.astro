---
import featherBrows from '@assets/icons/serv-feather-brows.svg'
import microblading from '@assets/icons/serv-microblading.svg'
import microshading from '@assets/icons/serv-microshading.svg'
import nanasSignature from '@assets/icons/serv-nanas-signature.svg'
import LinkButton from '@components/LinkButton.astro'
import { main } from '@config/menu.json'
const services = [
  {
    title: 'Microblading',
    description: 'Strokes only | Only by request',
    icon: microblading.src,
  },

  {
    title: 'Microshading',
    description: 'Shading Only',
    icon: microshading.src,
  },
  {
    title: 'Feather Brows',
    description: 'Front Strokes & Shading',
    icon: featherBrows.src,
  },
  {
    title: "Nana's Signature",
    description: 'Something special',
    icon: nanasSignature.src,
  },
] as const;

---

<section class="section-colored space-y-10">
  <div class="max-w-xl lg:max-w-none space-y-24 flex flex-col ">
    <h3 class="text-dark text-center text-6xl">Our Services</h3>
    <div
      class="grid max-w-sm md:grid-cols-2 gap-x-8 gap-y-10 sm:max-w-none lg:grid-cols-4"
    >
      {
        services.map((service) => (
          <div class="text-center sm:flex sm:text-left lg:block lg:text-center">
            <div class="sm:flex-shrink-0">
              <div class="flex justify-center">
                <img class=" aspect-square w-20" src={service.icon} alt={service.description}  />
              </div>
            </div>
            <div class="mt-3 sm:ml-6 sm:mt-0 lg:ml-0 lg:mt-6">
              <h4 class=" text-2xl font-medium text-dark">
                {service.title}
              </h4>
              <p class="mt-2 text-lg ">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
    <LinkButton className='self-center'  text='Learn More' href={main.Services} />
  </div>
</section>
