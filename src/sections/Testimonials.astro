---

<section class="section-colored space-y-10 flex items-center flex-col">
  <h3 class="text-center text-6xl ">Hear from Our Clients</h3>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3">
    {
      testimonials.map(({ image, text, name }) => (
        <li class="col-span-1 flex flex-col bg-white text-center shadow">
          <div class="flex flex-1 flex-col bg-[#F5EBEA]">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-80 object-fill"
            />
          </div>

          <div>
            <div class=" p-9 text-center space-y-5">
              <h4 class="text-[#423139] text-2xl font-bold">{name}</h4>
              <p class="text-[#8F7880]">{text}</p>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  <button type="button" class="btn-dark border-0">Book Now</button>
</section>
